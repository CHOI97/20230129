<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/green0">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icn_back"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            />

        <ImageView
            android:id="@+id/half_circle_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/background_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우리기억에 초대합니다"
            app:layout_constraintStart_toStartOf="@id/half_circle_image"
            app:layout_constraintEnd_toEndOf="@id/half_circle_image"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="155dp"
            android:fontFamily="@font/noto_sans_bold"
            />

        <LinearLayout
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="284dp"
            android:layout_marginHorizontal="24dp"
            android:orientation="vertical"
            android:background="@drawable/box_edit_text">
            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="이메일을 입력해주세요"
                android:textSize="11dp"
                android:textColorHint="@color/brownGray"
                android:fontFamily="@font/noto_sans_regular"
                android:paddingTop="10dp"
                android:paddingBottom="0dp"
                android:paddingStart="12dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_pswd"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_email"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            android:orientation="vertical"
            android:background="@drawable/box_edit_text">
            <EditText
                android:id="@+id/edit_pswd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="비밀번호를 입력해주세요"
                android:textSize="11dp"
                android:textColorHint="@color/brownGray"
                android:fontFamily="@font/noto_sans_regular"
                android:paddingTop="10dp"
                android:paddingBottom="0dp"
                android:paddingStart="12dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="620dp">

        <Button
            android:id="@+id/next_btn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@drawable/box_main_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="24dp"
            android:text="로그인"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_semi_bold"/>

        <Button
            android:id="@+id/join_membership_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/next_btn"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/colorPrimary"
            android:text="비밀번호 찾기"
            android:textSize="12dp"
            android:layout_marginHorizontal="24dp"
            android:paddingTop="0dp"
            android:fontFamily="@font/noto_sans_regular"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>